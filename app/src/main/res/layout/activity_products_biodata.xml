<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33c5"
    android:orientation="vertical"
    tools:context=".Products_biodata">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_p_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:background="@color/fbutton_color_nephritis"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/white"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/p_image"
            android:layout_width="match_parent"
            android:src="@drawable/ic_image_black_24dp"
            android:layout_height="100dp" />

        <EditText
            android:id="@+id/p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:text="aa"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/black"
            app:met_singleLineEllipsis="true" />


        <EditText
            android:id="@+id/p_qunntity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Available Quantity"
            android:inputType="number"
            android:text="900"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/black"
            app:met_singleLineEllipsis="true" />
        <!-- <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
             android:id="@+id/select_measuringunit"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#05ab9a"
             android:hint="Select measuring unit" />-->







        <EditText
            android:id="@+id/p_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Purchase price"
            android:inputType="number"
            android:text="10"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/black"
            app:met_singleLineEllipsis="true" />
        <EditText
            android:id="@+id/p_sale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sale price"
            android:inputType="number"
            android:text="89"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/black"
            app:met_singleLineEllipsis="true" />
        <EditText
            android:id="@+id/p_low_inventory_alerts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Low iventory alerts"
            android:inputType="number"
            android:text="10"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:met_baseColor="@android:color/black"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/black"
            app:met_singleLineEllipsis="true" />
        <info.hoang8f.widget.FButton
            android:id="@+id/p_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Add" />


    </LinearLayout>
    </LinearLayout>


</ScrollView>

