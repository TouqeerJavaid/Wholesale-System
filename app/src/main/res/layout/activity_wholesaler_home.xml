<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Wholesaler_home">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarwholesalerhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fbutton_color_nephritis"/>

    <LinearLayout
        android:id="@+id/shopkeeperandproductlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarwholesalerhome"
        android:orientation="horizontal">



        <Button
            android:id="@+id/product_goto"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="#50CC73"
            android:padding="5dp"
            android:text="Product"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <Button
            android:id="@+id/addshopkeepers1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:background="#50CC73"
            android:padding="5dp"
            android:text="Shopkeeper"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderandsalesrecordlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopkeeperandproductlayout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/orders"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="#50CC73"
            android:padding="5dp"
            android:text="orders"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/sales_record"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:background="#50CC73"
            android:padding="5dp"
            android:text="sales Record"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderandsalesrecordlayout"
        android:orientation="vertical">



        <TextView
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginTop="30dp"
            android:inputType="textPersonName"
            android:textSize="30sp"
            android:text="Low inventory alerts" />
       <TextView
           android:id="@+id/low_inventory_alerts"
           android:layout_width="fill_parent"
           android:text=""
           android:textAlignment="center"
           android:textSize="40sp"
           android:textColor="#F00"
           android:layout_height="60dp"
           android:onClick="low_inventory_activity"/>
    </LinearLayout>


</LinearLayout>